                        android:src="@drawable/ic_action_delete"
                        android:visibility="gone"/>



                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/aboutLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photoLayoutEdit"
            >

            <TextView
                android:id="@+id/aboutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="@string/about_text"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginVertical="20dp"/>

                <EditText
                    android:layout_below="@id/aboutTextView"
                    android:hint="Расскажите о себе"
                    android:id="@+id/aboutEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:paddingHorizontal="15dp"
                    android:textSize="18dp"
                    android:textColor="@color/chatText"
                    android:background="@drawable/chat_edit_text"
                    />


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
