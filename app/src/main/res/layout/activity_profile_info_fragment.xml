<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkModeBackground"
    tools:context=".InnerWindows.ProfileInfoEditFragment"
    android:paddingHorizontal="30dp"
    android:fillViewport="true"
    android:scrollbars="none"
    android:id="@+id/infoFragment"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/save"
            android:textColor="@color/mainColor"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="18dp"
            />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/back"
            android:textColor="@color/mainColor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="18dp"
            />

        <LinearLayout
            android:id="@+id/photoLayoutEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveButton"
            android:background="@drawable/photo_stroke_layout"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
                    <ImageView
                        android:id="@+id/photo11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/photo_stroke" />

                    <ImageView
                        android:id="@+id/photo11Add"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_alignEnd="@id/photo11"
                        android:layout_alignBottom="@id/photo11"
                        android:src="@drawable/add_icon"
                        />
                    <ImageView
                        android:id="@+id/photo11Del"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_alignStart="@id/photo11"
                        android:layout_alignBottom="@id/photo11"
                        android:src="@drawable/ic_action_delete"
                        android:visibility="gone"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
